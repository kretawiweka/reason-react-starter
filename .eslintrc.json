{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": [2, "never"],
    "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "indent": ["error", 2],
    "no-use-before-define": ["error", { "functions": false }],
    "no-console": 1,
    "no-unused-vars": "warn",
    "no-undef": 2,
    "no-useless-catch": 1,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0
  }
}
